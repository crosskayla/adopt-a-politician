<center>
  <h1><%= @politician.name %></h1>
  <h3>Party: <%= @politician.party %></h3>
  <h3>Total donations: $<%= @politician.dollars %></h3>
  <% if @donations.any? %>
    <ul>
      <% @donations.each do |donation| %>
      <li><b><%= link_to donation.voter.username, voter_path(donation.voter) %></b> donated <b><%= link_to "$#{donation.dollars}", donation_path(donation) %></b></li>
      <% end %>
    </ul>
  <% end %>
</center>
